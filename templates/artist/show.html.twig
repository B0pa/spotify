{% extends 'base.html.twig' %}

{% block title %}{{ artist.name }}{% endblock %}

{% block body %}
<div class="container mt-4"> <a href="{{ path('app_artist_index') }}" class="btn btn-outline-secondary mb-4"> <i class="bi bi-arrow-left"></i> Retour à la liste </a>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="{{ artist.imageUrl }}" class="card-img-top" alt="{{ artist.name }}" style="height: 300px; object-fit: cover;">
                <div class="card-body text-center">
                    <h2 class="card-title h4">{{ artist.name }}</h2>
                    <div class="d-flex flex-column gap-2 my-3">
                    <span class="badge bg-primary fs-6">
                        <i class="bi bi-people-fill"></i> {{ artist.followers|number_format(0, ',', ' ') }} followers
                    </span>
                        <span class="badge bg-success fs-6">
                        {{ artist.popularity }}% populaire
                    </span>
                        {% if artist.idSpotify in fav %}
                            {% include 'artist/_delete_from_like.html.twig' %}
                        {% else %}
                            {% include 'artist/_add_to_like.html.twig' %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header bg-light">
                    <h3 class="h5 mb-0">Informations de l'artiste</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h4 class="h6 text-muted mb-3">Genres musicaux</h4>
                        <div class="d-flex flex-wrap gap-2">
                            {% for genre in artist.genres %}
                                <span class="badge bg-warning text-dark fs-6">{{ genre }}</span>
                            {% else %}
                                <span class="text-muted">Aucun genre spécifié</span>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="mb-4 text-muted">
                        <p>ID Spotify : {{ artist.idSpotify }}</p>
                    </div>
                    <div class="mb-4">

                        <h4 class="h6 text-muted mb-3">Liens</h4>
                        <div class="d-flex flex-wrap gap-2">

                            <a href="{{ artist.uri }}" class="btn btn-outline-success" target="_blank">
                                <i class="fa-brands fa-spotify"></i>Spotify
                            </a>
                            <a href="{{ artist.externalUrl }}" class="btn btn-outline-dark" target="_blank">
                                <i class="bi bi-box-arrow-up-right"></i> Lien externe
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div> {% endblock %}